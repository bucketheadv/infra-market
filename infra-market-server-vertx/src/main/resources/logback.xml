<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 控制台输出（带颜色） -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%yellow(%d{yyyy-MM-dd HH:mm:ss.SSS}) %magenta([%thread]) %highlight(%-5level) %cyan(%logger{36}) - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 文件输出（无颜色） -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/infra-market-vertx.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/infra-market-vertx.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 根日志级别 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>

    <!-- 应用日志级别 -->
    <logger name="io.infra.market.vertx" level="DEBUG" />
    
    <!-- Vert.x 日志级别 -->
    <logger name="io.vertx" level="INFO" />
    
    <!-- 数据库连接池日志 -->
    <logger name="io.vertx.sqlclient" level="DEBUG" />
    
    <!-- MySQL 客户端日志（输出 SQL 语句） -->
    <logger name="io.vertx.mysqlclient" level="DEBUG" />
    
    <!-- Redis 客户端日志 -->
    <logger name="io.vertx.redis" level="INFO" />
</configuration>

